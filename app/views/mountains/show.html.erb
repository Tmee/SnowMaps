<div class="today-wrapper"><br>
  <div class="row">
    <div class="large-12 columns">
      <h1>Denver, CO</h1>
    </div>
    <div class="large-1 columns text-right" style="padding-top: 10px;">
      <p><%=@time%></p>
    </div>
    <div class="large-11 columns">
      <h3>| 23℉</h3 >
    </div>
  </div>
</div>

<div class="today-body">
 <div class="row">
    <div class="nav-center">
      <%=render 'layouts/nav_bar'%>
    </div>
  </div><br/>
  <div class="row panel">
    <dl class="accordion" data-accordion>
      <dd class="accordion-navigation text-center">
        <a href="#panel2b">
          <h1><strong><%=@mountain.name%></strong> | <%= @day_1['high']['fahrenheit']%>℉</h1><br><br>
          <i class="fi-thumbnails"></i>
        </a>
        <div id="panel2b" class="content text-center">
          <div class="row">
            <%=render 'mountains/weather_report'%>
          </div>
       </div><br>
      </dd>
    </dl>
      <div class="large-4 columns text-center ">
        <h4>Snowfall</h4>
        <h4><%=@mountain.overnight%></h4><hr/>
        <h7>New Snow</h7><br>
        <small>Last 24 hrs: <%=@mountain.last_24%></small><br>
        <small>Overnight: <%=@mountain.overnight%></small><br>
        <small>Last 48 hrs:  <%=@mountain.last_48%></small><br>
        <small>Last 7 days:  <%=@mountain.last_7_days%></small><hr/>
        <h7>Snow Conditions</h7><br>
        <small><%=@mountain.snow_condition%> </small><br>
        <small>Base Depth: <%=@mountain.base_depth%></small><br>
        <small>Season Total: <%=@mountain.season_total%></small><hr/>
      </div>
      <div class="large-8 columns text-center">
        <h4>Terrain Status</h4>
        <table>
          <thead>
            <tr>
              <th width="200" class="text-center">Lifts Running</th>
              <th width="200" class="text-center">Runs Open</th>
              <th width="200" class="text-center">Acres Open</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td class="text-center"><%=@mountain.lifts_open%></td>
              <td class="text-center"><%=@mountain.runs_open%></td>
              <td class="text-center"><%=@mountain.acres_open%></td>
            </tr>
          </tbody>
        </table>
        <dl class="tabs" data-tab>
          <%@mountain.peaks.each do |peak|%>
            <dd><a href="#panel<%=peak.id%>" class="trail-name"><%=peak.name%></a></dd>
          <%end%>
        </dl>
          <%=render 'mountains/trails_table'%>
      </div>
  </div>
</div>

