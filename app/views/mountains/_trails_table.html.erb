<div class="tabs-content" data-equalizer>
  <%@mountain.peaks.each do |peak|%>
    <%if peak.trails.present?%>
    <%@count = peak.trails.count / 2%>
      <div class="content" id="panel<%=peak.id%>">
        <div class="large-6 columns">
          <table>
            <thead>
              <tr>
                <th style="padding-right: 2px; padding-left: 2px; width: 64px;" class="text-center">Difficulty</th>
                <th width="150">Trail</th>
                <th style="padding-left: 5px; padding-right: 5px; max-width: 35px;width: 60px;"class="text-center">Open</th>
              </tr>
            </thead>
                <%peak.trails[0..@count].each do |trail|%>
                  <%= render partial: "trail_difficulty", locals: {trail: trail}%>
                <%end%>
            <tbody>
            </tbody>
          </table>
        </div>
        <div class="large-6 columns">
          <table>
            <thead>
              <tr>
                <th style="padding-right: 2px; padding-left: 2px; width: 64px;" class="text-center">Difficulty</th>
                <th width="150">Trail</th>
                <th style="padding-left: 5px; padding-right: 5px; max-width: 35px;width: 60px;"class="text-center">Open</th>
              </tr>
            </thead>
            <tbody>
              <%peak.trails[(@count+1)..-1].each do |trail|%>
                <%= render partial: "trail_difficulty", locals: {trail: trail}%>
              <%end%>
            </tbody>
          </table>
        </div>
      </div>
    <%end%>
  <%end%>
</div>