<%=render 'layouts/nav_bar'%>
<div class="today-body"><br/>
<!-- Mountain with the most snow -->
  <div class="row panel" style="background: #d8d8d8;">
    <div class="row">
      <div class="panel most-snow-panel">
        <div class="large-8 columns text-center">
          <h3><%=link_to "<i class='fi-info small'> #{@most_snow.name}".html_safe, "/#{@most_snow.slug}" %></i></h3>
          <div class="large-4 columns" style="padding-left: 0px;padding-right: 0px;">
            <h1><%=@most_snow.overnight%></h1>
          </div>
          <div class="large-6 columns today-temp">
            <h2><%=@most_snow.weather_reports.first.current_temp%>â„‰</h2>
          </div>
        </div>
        <%= render partial: "shared/panel_terrain_report", locals: {mountain: @most_snow}%>
      </div>
    </div><br/><br/>
<!-- End most snow -->
    <div class="row" data-equalizer>
      <%@mountains[1..-1].each do |mountain| %>
        <%= render partial: "shared/mountain_info_panel", locals: {mountain: mountain}%>
      <%end%>
    </div>
  </div><br>
</div>