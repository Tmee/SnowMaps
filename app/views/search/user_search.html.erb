<div class="today-wrapper"><br>
  <div class="row">
    <div class="large-12 columns">
      <h1>Denver, CO</h1>
    </div>
    <div class="large-1 columns text-right" style="padding-top: 10px;">
      <p><%=@time%></p>
    </div>
    <div class="large-11 columns">
      <h3>| 23℉</h3 >
    </div>
  </div>
</div>


<div class="today-body">
  <div class="row">
    <div class="nav-center">
      <%=render 'layouts/nav_bar'%>
    </div>
  </div><br/>

  <div class="row" data-equalizer>
  <h1>Mountains:</h1>
  <%if @mountiains.nil? || @peaks.empty?%>
    <h4>No results</h4>
  <%else%>
    <%@mountains.each do |mountain| %>
      <div class="large-6 columns panel">
        <div class="large-8 columns text-center">
          <h3><%=link_to "<i class='fi-arrow-right medium'>".html_safe, "/#{mountain.slug}" %></i></a> <%=mountain.name%></h3>
          <div class="large-2 columns">
            <h1><%=mountain.overnight%>"</h1>
          </div>
          <div class="large-6 columns">
            <h2>45℉</h2>
          </div>
        </div>
        <div class="large-4 columns text-center" style="padding-top: 3%;">
          <p>Terrain Report</p>
          <small>Acres Open : <%=mountain.acres_open%></small>
          <small>Lifts Open : <%=mountain.lifts_open%></small>
          <small>Runs Open : <%=mountain.runs_open%></small>
        </div>
      </div>
    <%end%>
    <%end%>
  </div>

  <div class="row" data-equalizer>
  <h1>Peaks:</h1>
  <%if @peaks.nil? || @peaks.empty?%>
    <h4>No results</h4>
  <%else%>
    <%@peaks.each do |peak| %>
      <div class="large-6 columns panel">
        <div class="large-8 columns text-center">
          <h1><%=peak.name%>"</h1>
        </div>
      </div>
    <%end%>
    <%end%>
  </div>

  <div class="row" data-equalizer>
  <h1>Trails:</h1>
  <%if @trails.nil? || @peaks.empty?%>
    <h4>No results</h4>
  <%else%>
    <%@trails.each do |trail| %>
      <div class="large-6 columns panel">
        <div class="large-8 columns text-center">
          <h4><%=trail.name%></h4>
        </div>
      </div>
    <%end%>
    <%end%>
  </div>
</div>